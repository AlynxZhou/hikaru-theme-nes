$grey-lighter = #eee;
$grey-light = #ddd;
$grey = #ccc;
$grey-dark = #999;
$grey-dim = #666;
$grey-deep = #444;
$black-light = #33363b;
$black-dim = #252525;
$black-deep = #222;
$black-dark = #26272b;
$pink = #f8f8f8;
$orange = #fc6423;
$red-lighter = #f8d7da;
$red-light = #f5c6cb;
$red = #ff2a2a;
$red-dark = #721c24;
$green-lighter = #d4edda;
$green-light = #c3e6cb;
$green = #37cf38;
$green-dark = #155724;
$blue-lighter = #cce5ff;
$blue-light = #b8daff;
$blue-bright = #cbeafb;
$blue = #33aaef;
$blue-deep = #3366ee;
$blue-dark = #004085;

$color-font = $black-dark;
$color-quote = $grey-dim;
$color-selection-background = $blue-bright;
$color-selection-font = $black-deep;
$color-link = $grey-dim;
$color-link-hover = $blue-deep;
$color-author-name = $black-dark;
$color-author-description = $grey-deep;
$color-code-font = $orange;
$color-code-background = $pink;
$color-table-border = $grey-light;
$color-table-head-border = $grey-dark;
$color-table-head-background = white;
$color-table-odd-row-background = $grey-lighter;
$color-table-even-row-background = white;
$color-reward-font = $grey-deep;

$font-sans = Roboto, "Noto Sans", "Noto Sans CJK", Helvetica, Arial, sans-serif;
$font-serif = "Roboto Slab", "Noto Serif", "Noto Serif CJK", Georgia, "Times New Roman", serif;
$font-mono = Monaco, Menlo, "Roboto Mono", Consolas, monospace;
// $font-all inherits $font-sans and $font-serif, other fonts inherit $font-all.
$font-all = $font-sans, $font-serif;
if (getThemeConfig("customFont.enable") && getThemeConfig("customFont.all")) {
  $font-all = getThemeConfig("customFont.all"), $font-all;
}
$font-title = $font-all;
if (getThemeConfig("customFont.enable") && getThemeConfig("customFont.title")) {
  $font-title = getThemeConfig("customFont.title"), $font-title;
}
$font-subtitle = $font-all;
if (getThemeConfig("customFont.enable") && getThemeConfig("customFont.subtitle")) {
  $font-subtitle = getThemeConfig("customFont.subtitle"), $font-subtitle;
}
$font-main = $font-all;
if (getThemeConfig("customFont.enable") && getThemeConfig("customFont.main")) {
  $font-main = getThemeConfig("customFont.main"), $font-main;
}
// $font-code inherits $font-mono and $font-all;
$font-code = $font-mono;
$font-code = $font-code, $font-all;
if (getThemeConfig("customFont.enable") && getThemeConfig("customFont.code")) {
  $font-code = getThemeConfig("customFont.code"), $font-code;
}
$font-size = 16px;

$search-height = 3em;
$search-padding-top = 0.5em;
$container-max-width = 80em;
$media-footer-header-nav-fold-width = 40em;
$media-main-fold-width = 60em;
