@import "variables";
@import "nib";
.page {
  .page-title {
    text-align: center;
  }
  .page-counter {
    text-align: center;
  }
  .pagination {
    margin: 1em 0;
    padding: 1em 0;
    display: block;
    text-align: center;
    color: $color-link;
    .space {
      font-size: 1.5em;
      margin: 0 0.5em;
      color: $color-link;
    }
  }
  .page-nav {
    margin: 0 1em;
    padding: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    a.page-nav-item {
      flex: 1 0 auto;
      font-size: 1.2em;
      position: relative;
      display: inline-flex;
      flex-direction: row;
      flex-wrap: nowrap;
      align-items: center;
      span {
        margin: 0.3em;
      }
      &:active {
        top: 0.1em;
      }
    }
    a.page-nav-next {
      width: 45%;
      text-align: left;
      justify-content: flex-start;
    }
    a.page-nav-prev {
      width: 45%;
      text-align: right;
      justify-content: flex-end;
    }
  }
}
